<h1>Burger Lovers!</h1>

<div id="showBurger">

  <div id="notEaten">
    <h2>Eat the Burgers!</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit">Devour</button>
            </form>

            
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <img id="pic" src="https://media.timeout.com/images/103902673/image.jpg"

  <div id="eaten">
    <h2>Yet to be devoured Burgers</h2>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
              <button type="submit">Un Eat?</button>
            </form>
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div id="addBurger">
  <div id="input">
    <h2>Add a burger:</h2>
    <form class="create-update-form" action="burgers/create" method="POST">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

      <button id="add-burger-button" type="submit">Add a Burger</button>
    </form>
  </div>
</div>

